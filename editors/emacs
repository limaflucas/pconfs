(require 'package)
(add-to-list 'package-archives '("melpa" . "https://melpa.org/packages/") t)
(package-initialize)
(package-refresh-contents)

;; install and enable packages
(unless (package-installed-p 'flycheck)
  (package-install 'flycheck))
(unless (package-installed-p 'company)
  (package-install 'company))
(unless (package-installed-p 'tide)
  (package-install 'tide))
(unless (package-installed-p 'web-mode)
  (package-install 'web-mode))
(unless (package-installed-p 'aggressive-indent)
  (package-install 'aggressive-indent))
(unless (package-installed-p 'nord-theme)
  (package-install 'nord-theme))
(unless (package-installed-p 'treemacs)
  (package-install 'treemacs))
(unless (package-installed-p 'rainbow-delimiters)
  (package-install 'rainbow-delimiters))

;; enable lateral line numbers
(global-display-line-numbers-mode)

;; enable line highlight
(global-hl-line-mode)

;; disable toolbar
(tool-bar-mode -1)

;; disable scrollbar
(toggle-scroll-bar -1)

;; enable rainbow  delimiters
(add-hook 'prog-mode-hook #'rainbow-delimiters-mode)

;; enable aggressive indent
(global-aggressive-indent-mode 1)

;; configuring web-mode
(setq mweb-filename-extensions '(
      "php" "htm" "html" "ctp" "phtml" "php4" "php5"))

;; enabling TIDE
(defun setup-tide-mode ()
  (interactive)
  (tide-setup)
  (flycheck-mode +1)
  (setq flycheck-check-syntax-automatically '(save mode-enabled))
  (eldoc-mode +1)
  (tide-hl-identifier-mode +1)
  ;; company is an optional dependency. You have to
  ;; install it separately via package-install
  ;; `M-x package-install [ret] company`
  (company-mode +1))

;;  aligns annotation to the right hand side
(setq company-tooltip-align-annotations t)

;; formats the buffer before saving
(add-hook 'before-save-hook 'tide-format-before-save)

;; settings TIDE hook
(add-hook 'typescript-mode-hook #'setup-tide-mode)

;; enabling windmove
(windmove-default-keybindings)

(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(ansi-color-faces-vector
   [default default default italic underline success warning error])
 '(ansi-color-names-vector
   ["black" "red3" "ForestGreen" "yellow3" "blue" "magenta3" "DeepSkyBlue" "gray50"])
 '(column-number-mode t)
 '(custom-enabled-themes '(nord))
 '(custom-safe-themes
   '("37768a79b479684b0756dec7c0fc7652082910c37d8863c35b702db3f16000f8" "90a6f96a4665a6a56e36dec873a15cbedf761c51ec08dd993d6604e32dd45940" default))
 '(inhibit-startup-screen t)
 '(package-selected-packages
   '(web-mode company aggressive-indent crux rainbow-delimiters ac-emmet magit lsp-treemacs ac-html tss ac-html-angular angular-mode tide typescript-mode nord-theme material-theme))
 '(show-paren-mode t))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 )
